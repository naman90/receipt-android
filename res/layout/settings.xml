<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="ie.rm.activities.Settings"
    tools:ignore="MergeRootFrame"
    android:background="@color/appBGThemeColor" >

    <Button
        android:id="@+id/linkDropboxButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="124dp"
        android:text="@string/dropboxButtonText"
        android:background="@drawable/bluebgbutton"
        android:textColor="@color/actionBarText"
        android:padding="20dp"
        android:onClick="dropboxButtonAction" />

    <TextView
        android:id="@+id/infoLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:text="@string/settingsInfoLabel"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:gravity="center" />

</RelativeLayout>

